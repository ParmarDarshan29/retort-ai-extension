{
  "manifest_version": 3,
  "name": "retort.ai",
  "version": "1.1",
  "description": "AI-powered smart reply generator with context-aware modes.",
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}